<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin_main">
    <TextView
        android:id="@+id/bienvenida"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bienvenido admin"
        android:textSize="45dp"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="30dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/Cursos_cardview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/soft_black"
        app:layout_constraintTop_toBottomOf="@id/bienvenida"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="80dp"
        app:cardCornerRadius="5dp">
        <Button
            android:id="@+id/Cursos"
            android:layout_marginHorizontal="25dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Agregar curso"
            android:textSize="28dp"
            android:textStyle="italic"
            android:background="@android:color/transparent"
            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/soft_black"
        app:layout_constraintTop_toBottomOf="@id/Cursos_cardview"
        app:layout_constraintEnd_toEndOf="@id/Cursos_cardview"
        app:layout_constraintStart_toStartOf="@id/Cursos_cardview"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="5dp">
        <Button
            android:id="@+id/Miscursos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Administrar cursos"
            android:textSize="28dp"
            android:textStyle="italic"
            android:background="@android:color/transparent"
            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/red"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="20dp"
        app:cardCornerRadius="5dp">
        <Button
            android:id="@+id/CerrarSesion"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Cerrar sesion"
            android:textSize="25dp"
            android:background="@android:color/transparent"
            />
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>