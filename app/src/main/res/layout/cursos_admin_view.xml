<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/Curso_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:hint="Titulo curso"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/editar_curso_cardview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/soft_black"
        app:layout_constraintTop_toBottomOf="@id/Curso_titulo"
        app:layout_constraintStart_toStartOf="@id/Curso_titulo"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        app:cardCornerRadius="5dp">
        <Button
            android:id="@+id/Editar_Curso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Editar"
            android:textSize="20dp"
            android:textStyle="italic"
            android:background="@android:color/transparent"
            />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/red"
        app:layout_constraintStart_toEndOf="@id/editar_curso_cardview"
        app:layout_constraintTop_toTopOf="@id/editar_curso_cardview"
        app:cardCornerRadius="5dp"
        android:layout_marginStart="50dp">
        <Button
            android:id="@+id/Eliminar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Eliminar"
            android:textSize="20dp"
            android:background="@android:color/transparent"
            />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>