<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
        <TextView
            android:id="@+id/PreguntaField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:hint="pregunta"
            app:layout_constraintTop_toTopOf="parent" />
    <CheckBox
        android:id="@+id/opcion1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/PreguntaField"
        app:layout_constraintStart_toStartOf="@id/PreguntaField"
        android:hint="opcion1"/>
    <CheckBox
        android:id="@+id/opcion2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="opcion 2"
        app:layout_constraintStart_toStartOf="@id/PreguntaField"
        app:layout_constraintTop_toBottomOf="@id/opcion1"/>
    <CheckBox
        android:id="@+id/opcion3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="opcion 3"
        app:layout_constraintStart_toStartOf="@id/PreguntaField"
        app:layout_constraintTop_toBottomOf="@id/opcion2"/>

</androidx.constraintlayout.widget.ConstraintLayout>